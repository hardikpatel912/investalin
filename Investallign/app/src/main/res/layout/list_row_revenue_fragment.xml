<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_row_selector"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">


    <LinearLayout
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="match_parent"
        android:layout_weight="0.15">

        <com.investallign.CustomViews.RoundedImageView
            android:src="@drawable/ic_profile"
            android:id="@+id/fragment_revenue_route_iv"
            android:layout_width="50dp"
            android:layout_height="50dp" />

    </LinearLayout>


    <LinearLayout
        android:paddingLeft="10dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.75">

        <TextView
            android:layout_marginTop="5dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="Taylor Swift"
            android:id="@+id/fragment_revenue_route_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Success 100%"
            android:id="@+id/fragment_revenue_route_tv_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1">

        <ImageView
            android:gravity="center"
            android:src="@drawable/ic_news"
            android:id="@+id/fragment_revenue_route_iv_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>