<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="93"
        android:background="@drawable/login_bg"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:weightSum="90">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:gravity="center_horizontal"
            android:padding="30dp"
            android:text="Investallign"
            android:textColor="#fff"
            android:textSize="28dp" />


        <EditText
            android:id="@+id/activity_login_edt_email"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:backgroundTint="#fff"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="10dp"
            android:hint="Email Address"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#fff"
            android:textColorHint="#fff"
            />


        <EditText
            android:id="@+id/activity_login_edt_password"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:backgroundTint="#fff"
            android:drawableLeft="@drawable/ic_password"
            android:drawablePadding="10dp"
            android:hint="Password"
            android:singleLine="true"
            android:maxLines="1"
            android:inputType="textPassword"
            android:textColor="#fff"
            android:textColorHint="#fff" />


        <TextView
            android:id="@+id/activity_login_txt_forgot_password"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:gravity="center|right"
            android:text="Forgot Password?"
            android:textColor="#fff"
            android:textSize="18dp" />

        <Button
            android:id="@+id/activity_login_btn_signup"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:background="#fff"
            android:text="Sign In"
            android:textColor="#3090C7"
            android:textSize="15dp"
            android:textStyle="bold"></Button>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:gravity="center"
            android:text="Or Login using"
            android:textColor="#fff"
            android:textSize="15dp" />

        <LinearLayout
            android:id="@+id/social"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:weightSum="100"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:padding="5dp"
                android:id="@+id/activity_login_btn_fb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_fb" />

            <ImageView
                android:padding="5dp"
                android:id="@+id/activity_login_btn_gmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_gplus" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/newAccount"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="#08689F"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:id="@+id/activity_login_txt_new_account"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="95"
            android:drawableRight="@drawable/ic_create_account"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="Create New Account"
            android:textColor="#fff"

            />
    </LinearLayout>
</LinearLayout>