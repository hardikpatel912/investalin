<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.investallign.activities.NewsDetailsActivity">

    <include layout="@layout/tool_bar"/>

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="0.2">

                <TextView
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="How Income Tax Department can monitor your money"
                    android:id="@+id/news_details_activity_tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_weight="0.1">

                <TextView
                    android:text="New Delhi"
                    android:textColor="@color/ColorPrimaryDark"
                    android:layout_weight="1"
                    android:id="@+id/news_details_activity_tv_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="1 Hour go"
                    android:textAlignment="viewEnd"
                    android:layout_weight="1"
                    android:id="@+id/news_details_activity_tv_duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3">

                <ImageView
                    android:id="@+id/news_details_activity_iv_news"
                    android:src="@drawable/ic_no_internet"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4">

                <TextView
                    android:text="@string/description"
                    android:id="@+id/news_details_activity_tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
