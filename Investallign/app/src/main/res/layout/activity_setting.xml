<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100">

   <include layout="@layout/tool_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100"

        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingTop="10dp"
        android:weightSum="100">

        <Switch
            android:id="@+id/activity_setting_switch_notification"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:paddingRight="5dp"
            android:text="Push Notification"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            tools:targetApi="ice_cream_sandwich" />

        <View
            android:id="@+id/viewas1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C4C1C1"></View>


        <TextView
            android:id="@+id/activity_setting_txt_edit_profile"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:drawablePadding="10dp"
            android:layout_marginRight="15dp"
            android:drawableRight="@drawable/ic_side_arrow"
            android:gravity="center_vertical"
            android:paddingRight="5dp"
            android:text="Edit Profile"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <View

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C4C1C1" />

        <TextView
            android:id="@+id/activity_setting_txt_change_pwd"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/ic_side_arrow"
            android:gravity="center_vertical"
            android:paddingRight="5dp"
            android:text="Change Password"
            android:layout_marginRight="15dp"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <View

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C4C1C1" />

        <TextView
            android:id="@+id/activity_setting_txt_about_us"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/ic_side_arrow"
            android:gravity="center_vertical"
            android:paddingRight="5dp"
            android:text="About Us"
            android:layout_marginRight="15dp"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <View

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C4C1C1" />

        <TextView
            android:id="@+id/activity_setting_txt_tearm_of_use"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:drawablePadding="10dp"
            android:layout_marginRight="15dp"
            android:drawableRight="@drawable/ic_side_arrow"
            android:gravity="center_vertical"
            android:paddingRight="5dp"
            android:text="Terms of Use"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <View

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C4C1C1" />

        <TextView
            android:id="@+id/activity_setting_txt_privacy_policy"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/ic_side_arrow"
            android:gravity="center_vertical"
            android:paddingRight="5dp"
            android:text="Privacy Policy"
            android:textColor="#000"
            android:layout_marginRight="15dp"
            android:textSize="15dp"
            android:textStyle="bold" />

        <View

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C4C1C1" />


    </LinearLayout>
</LinearLayout>
