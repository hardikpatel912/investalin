<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100">
    <include layout="@layout/tool_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="82"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="20dp"
        android:weightSum="100">





        <EditText
            android:id="@+id/activity_change_pwd_edt_old_pwd"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="14"
            android:drawableLeft="@drawable/ic_password_signup"
            android:drawablePadding="10dp"
            android:singleLine="true"
            android:inputType="textPassword"
            android:hint="Old Password"
            android:backgroundTint="#6E6E6E"
            android:textColor="#6E6E6E"
            android:textColorHint="#6E6E6E" />




        <EditText
            android:id="@+id/activity_change_pwd_edt_new_pwd"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:singleLine="true"
            android:layout_weight="14"
            android:drawableLeft="@drawable/ic_password_signup"
            android:drawablePadding="10dp"
            android:hint="New Password"
            android:inputType="textPassword"
            android:backgroundTint="#6E6E6E"
            android:textColor="#6E6E6E"
            android:textColorHint="#6E6E6E" />


        <EditText
            android:id="@+id/activity_change_pwd_edt_confirm_pwd"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="14"
            android:singleLine="true"
            android:drawableLeft="@drawable/ic_password_signup"
            android:drawablePadding="10dp"
            android:hint="Confirm Password"
            android:backgroundTint="#6E6E6E"
            android:textColor="#6E6E6E"
            android:inputType="textPassword"
            android:textColorHint="#6E6E6E" />



        <Button
            android:id="@+id/activity_change_pwd_btn_change"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            android:layout_weight="13"
            android:background="#FA8258"
            android:text="Change"
            android:textColor="#fff"
            android:textSize="15dp"
            android:textStyle="bold"></Button>


    </LinearLayout>
</LinearLayout>

